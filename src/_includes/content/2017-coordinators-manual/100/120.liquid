
<dl class="dl-inline dl-inline--colon">
  {% for entry in manual.glossary %}
    <dt>{{ entry.term }}</dt>
    <dd>{{ entry.definition }}</dd>
    {%- if entry.subdefinitions %}
      <dd class="ps-5">
        <dl class="dl-inline dl-inline--colon">
          {% for item in entry.subdefinitions %}
            <dt>{{ item.term }}</dt>
            <dd>{{ item.definition }}</dd>
          {% endfor %}
        </dl>
      </dd>
    {%- endif %}
  {% endfor %}
</dl>