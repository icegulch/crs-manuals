---
pagination:
  data: sections
  size: 1  # Generate one file per section
  alias: section  # Alias for the current section in the template
permalink: false
# permalink: /markdown/{{ section.id | slugify }}.md
---
{% assign titleArray = section.title | split: " " %}
{%- capture newTitle -%}
  {%- for word in titleArray %}{{ word | capitalize }} {% endfor -%}
{%- endcapture -%}
---
section_id: {{ section.id }}
section_title: {{ section.title }}
title: {{ newTitle }}
{%- if section.is_activity %}
is_activity: true
{%- endif %}
{%- if section.is_element %}
is_element: true
{%- endif %}
{%- if section.abbr %}
abbr: {{ section.abbr }}
{%- endif %}
page_in_manual: {{ section.page_in_manual }}
---
